<section>
  <h2>Create Thine Kingdom:</h2>
  <form action="{{path}}" method="POST">
    <label for="name">Thy Kingdom's Name:</label>
    <input id="name" type="text" name="name">
    <label for="king">Thy King:</label>
    <input id="king" type="text" name="king">
    <label for="queen">Thy Queen:</label>
    <input id="queen" type="text" name="queen">
    <input type="submit">
  </form>
</section>

<section>
  <h2>Our Kingdoms:</h2>
  <ul>
    {{#each kingdoms as |kingdom|}}
      <li class="item">
        <a href="{{../path}}/{{ kingdom.name }}">
          {{ kingdom.name }}
        </a>
        <br>
        {{ kingdom.castles.length }} castles
        <form class="" action="{{../path}}/{{kingdom.name}}" method="post">
          <button type="submit" name="button">delete</button>
        </form>
      </li>
    {{/each}}
  </ul>
</section>
